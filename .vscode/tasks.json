{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build active file",
            "command": "clang++.exe",
            "args": [
                "-g",          // debug info
                "-fopenmp",    // use OpenMP
                "-std=c++20",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe" // Output file name
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
